<!-- Barre de navigation -->
<%- include('../partials/head'); %>

<!-- Contenu -->
<main>
    <div class="div-form" id="div-contains" style="padding-top: 150px;">
        <h1 id="h1-connexion">S'inscrire</h1>
        <form class="form-signin" id="form-signin" action="/inscription" method="post">
            <div class="form-group">
                <label>Nom</label>
                <input type="text" class="form-control" placeholder="par exemple : John" name="nom" required>
            </div>

            <div class="form-group">
                <label>Prénom</label>
                <input type="text" class="form-control" placeholder="par exemple : Smith" name="prenom" required>
            </div>

            <div class="form-group">
                <label>Adresse</label>
                <input type="text" class="form-control" placeholder="par exemple : 23 rue du Paradis, 75004 Paris" name="adresse" required>
            </div>

            <div class="form-group">
                <label>Adresse email</label>
                <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="par exemple : example@test.fr" name="mail" required>
            </div>

            <div class="form-group">
                <label >Mot de passe</label>
                <input type="password" class="form-control" name="mdp" required>
            </div>

            <button type="submit" class="button button-submit" value="accept">Envoyez</button>

            <% if(!err) { %>
                <div class="alert alert-warning" role="alert">
                    Attention : ce compte existe déjà : connectez-vous <a href="connexion">ici</a>.
                </div>
            <% } %>
            
            <small>En continuant, vous acceptez notre utilisation de vos données personnelles pour vous offrir une expérience personnalisée, ainsi que pour mieux comprendre et améliorer notre service.</small>
        </form>
    </div>
</main>

<!-- Barre de fin -->
<%- include('../partials/footer'); %>